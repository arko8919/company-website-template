{
  "ignorePatterns": ["src/js/bootstrap.bundle.js"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier",
    "import",
    "unused-imports"
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/no-unused-modules": "error",
    "unused-imports/no-unused-vars": "error"
  }
}
